{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description|nl2br }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price|number_format(2,',',' ') }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img id="picture" src="{{ asset('image/' ~ product.image) }}" alt="{{ product.name }}" width="200" height="200"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
